@model List<Report>
@{
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Report Table</h4>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                Name
                            </th>
                            <th>
                                Request Date
                            </th>
                            <th>
                                Due Amount
                            </th>
                            <th colspan="2">
                                Actions
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @item.Title
                                </td>
                                <td>
                                    @item.RequetDate
                                </td>
                                <td>
                                    @item.DueAmount
                                </td>
                                <td colspan="2">
                                    <a asp-action="Edit" asp-route-id="@item.Id"  type="button" class="btn btn-sm btn-outline-primary">Edit</a>
                                    <a asp-action="Delete" asp-route-isxc="false" asp-route-id="@item.Id" asp-route-test="Jasser" type="button" class="btn btn-sm btn-outline-danger">Delete</a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
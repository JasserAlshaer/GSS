@model Report;
@{
    Layout = "_Layout";
}
<div class="col-md-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Edit Report form</h4>
            <form asp-action="Edit" method="post" class="forms-sample">
                <input type="hidden" name="id" value="@Model.Id" />
                <div class="form-group">
                    <label for="exampleInputUsername1">Title</label>
                    <input type="text" value="@Model.Title" name="title" class="form-control" id="exampleInputUsername1" placeholder="Username">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Due Amount</label>
                    <input type="number" value="@Model.DueAmount" name="DueAmount" class="form-control" id="exampleInputEmail1" placeholder="Email">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Requested date</label>
                    <input type="datetime-local" value="@Model.RequetDate" name="requestdate" class="form-control" id="exampleInputPassword1" placeholder="Password">
                </div>
                <button type="submit" class="btn btn-primary mr-2">Submit</button>
                <button type="reset" class="btn btn-light">Cancel</button>
            </form>
        </div>
    </div>
</div>